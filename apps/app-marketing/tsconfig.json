{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["*"],
            "@/site/content": ["./.velite"]
        }
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}
